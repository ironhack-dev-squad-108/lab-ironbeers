<div class="d-flex flex-column justify-content-center align-items-center p-4">
  {{#each beer}}
  <div class="row">
    <div class="col-12 col-md-4"><img src="{{this.image_url}}" alt=""></div>
    <div class="col-12 col-md-8 d-flex flex-column justify-content-center">
      <div class="">
        <h4>{{this.name}}</h4>
      </div>
      <div class="text-muted font-italic font-weight-light ml-2">{{this.tagline}}</div>

      <div class="mt-4">{{this.description}}</div>
      <div class="mt-4">
        <h5 class="font-weight-bold">Food Pairing</h5>
        <ul class="p-3">{{#each this.food_pairing}}<li>{{this}}</li>{{/each}}</ul>
      </div>
      <div class="mt-2">
        <h5 class="font-weight-bold">Brewers Tip:</h5>
        <div>{{this.brewers_tips}}</div>
      </div>
    </div>
  </div>
  {{/each}}
</div>